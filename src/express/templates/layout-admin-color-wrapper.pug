doctype html
head
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width,initial-scale=1')
  meta(name='Description', content='Личный блог Типотека')
  title Типотека
  link(rel='preload', href='/fonts/Inter-Regular.woff2', as='font', crossorigin='anonymous')
  link(rel='preload', href='/fonts/Inter-Medium.woff2', as='font', crossorigin='anonymous')
  link(rel='preload', href='/fonts/SFProDisplay-Regular.woff2', as='font', crossorigin='anonymous')
  link(rel='stylesheet', href='/css/style.min.css')
  style.
    a.active {
      pointer-events: none;
    }
    .server-error {
      border-radius: 10px;
      color: white;
      background-color: tomato;
      margin: 20px 0;
      padding: 10px;
    }
body
  mixin errorMessage(message)
    if message
      .server-error= message

  mixin pagination(page, totalPages, width, prefix)
    -
      let start = page - width;
      let end = page + width;

      if(start < 1){
      end += 1 - start;
      start = 1;
      }
      if(end > totalPages){
      start -= end - totalPages;
      end = totalPages;
      }

      if(start < 1){
      start = 1;
      }
      let i = start - 1

    .tickets-list__pagination
      ul.pagination
        if start > 1
          li
            a(href=`${prefix}page=${page - 1}`) Назад
        while i++ < end
          li
            a(class={ active: i === page } href=`${prefix}page=${i}`)= i
        if end < totalPages
          li
            a(href=`${prefix}page=${page + 1}`) Вперёд
  .wrapper-color
    include partials/header-admin.pug
    block content
    include partials/footer.pug
